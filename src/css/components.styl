.navbar
  height: 48px
  line-height: 48px
  border-bottom: 1px solid light-grey
  padding: 0 20px
  background-color: rgba(255, 255, 255, 0.9)

  .logo
    font-weight: 300
    color: grey-blue
    font-size: 24px

    &:hover
      text-decoration: none

    img
      width: 28px
      height: 28px
      margin-right: 8px
      vertical-align: middle
      margin-top: -6px

  a
    margin-right: 16px


  .right
    a
      margin-left: 16px
      margin-right: 0


.avatar
  border-radius: 50%
  margin-right: 8px
  vertical-align: middle
  width: 32px
  height: 32px